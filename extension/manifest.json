{
  "manifest_version": 3,
  "name": "PhishTank",
  "version": "1.0",
  "description": "AI-powered phishing site detector using machine learning",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "./popup.html",
    "default_icon": {
      "16": "./icons/icon.png",
      "48": "./icons/icon.png",
      "128": "./icons/icon.png"
    }
  },

  "icons": {
    "16": "./icons/icon.png",
    "48": "./icons/icon.png",
    "128": "./icons/icon.png"
  }
}
